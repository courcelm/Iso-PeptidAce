<UserControl x:Class="PeptidAce.ModernUI.Content.RatioUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:amq="clr-namespace:AmCharts.Windows.QuickCharts;assembly=AmCharts.Windows.QuickCharts"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="320" />
        </Grid.RowDefinitions>
        <TextBlock Name="Title" Grid.Row="0" Text="" Style="{StaticResource Heading2}"/>
        <amq:PieChart Name="pie1" TitleMemberPath="Title" ValueMemberPath="Value" Grid.Row="1" HorizontalAlignment="Left" FontSize="10" />
    </Grid>
</UserControl>
