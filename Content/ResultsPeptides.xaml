<UserControl x:Class="PeptidAce.ModernUI.Content.ResultsPeptides"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:amq="clr-namespace:AmCharts.Windows.QuickCharts;assembly=AmCharts.Windows.QuickCharts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Name="StackPanelParent" MinWidth="200" Orientation="Vertical">
                <StackPanel Name="saveStack" Orientation="Horizontal">
                    <Button Name="BtnSave" Height="24" Width="128" Click="BtnSave_Click" HorizontalAlignment="Left">Save as image</Button>
                    <TextBlock Name="txtSave" MinWidth="256"></TextBlock>
                </StackPanel>
                <StackPanel Name="StackPanel1" MinWidth="200" Orientation="Vertical">
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
